extends layout

block content
    div.p-6
        div.bg-white.p-6.rounded-lg
            p.text-xl.font-bold.mb-8 Welcome, #{username} 
            include navbar.pug
            form(action="/dashboard/product-config/create", method="post" class="w-1/3")
                p.text-lg.mb-4.font-bold Product-Create Config
                div.my-4.text-gray-500
                
                    if message 
                        div.bg-red-200.px-3.py-2.my-4.rounded
                            p.m-0=message 

                    input(type="hidden", name="_csrf" "value"=csrfToken)
                    div.mb-3
                        label.mb-2.block.font-bold Product
                        select(name="product_id" placeholder='Product' class='block w-full rounded border border-solid border-gray-200 px-3 py-2')
                            each item in ddl_product
                                option(value=item.code) #{item.code+' - '+item.name}  
                    
                    div.mb-3
                        label.mb-2.block.font-bold Config
                        select(name="config_id" placeholder='Config' class='block w-full rounded border border-solid border-gray-200 px-3 py-2')
                            each item in ddl_config
                                option(value=item._id) #{item.name+' - '+item.param_id.param_key}  
                    
                    button(type="submit" class="w-full py-2 px-4 rounded-lg bg-blue-200 font-bold text-black") Submit 